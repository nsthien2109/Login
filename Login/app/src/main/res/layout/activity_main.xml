<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FBF4FE"
    tools:context=".MainActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="233dp"
        android:background="@drawable/ic_back2">


        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:srcCompat="@drawable/ic_logo" />
    </FrameLayout>

    <EditText
        android:id="@+id/tv_us"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="25dp"
        android:drawableRight="@drawable/ic_user"
        android:ems="10"
        android:hint="Enter username"
        android:inputType="text"
        android:background="@drawable/text_radius"
        android:textColorHint="#9F9999" />

    <EditText
        android:id="@+id/tv_ph"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColorHint="#9F9999"
        android:layout_margin="25dp"
        android:ems="10"
        android:drawableRight="@drawable/ic_ph"
        android:background="@drawable/text_radius"
        android:hint="Enter mobile number"
        android:inputType="phone" />


    <EditText
        android:id="@+id/tv_add"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColorHint="#9F9999"
        android:layout_margin="25dp"
        android:ems="10"
        android:drawableRight="@drawable/ic_loca"
        android:background="@drawable/text_radius"
        android:hint="Enter your address"
        android:inputType="text" />

    <TextView
        android:id="@+id/btn_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="#FFEB3B"
        android:textSize="25dp"
        android:layout_marginLeft="100dp"
        android:layout_marginRight="100dp"
        android:background="@drawable/border_radius"
        android:padding="10dp"
        android:clickable="true"
        android:text="Sign In" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/label_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="You don't have account ?" />
        <TextView
            android:id="@+id/btn_sign_up"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7dp"
            android:textColor="#FF9800"
            android:textSize="18dp"
            android:clickable="true"
            android:text="Sign Up" />

    </LinearLayout>
</LinearLayout>